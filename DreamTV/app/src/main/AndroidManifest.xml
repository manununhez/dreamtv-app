<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dream.dreamtv">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <application
        android:name=".DreamTVApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".SplashScreen"
            android:banner="@drawable/logo_dream_tv"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:icon="@drawable/app_icon_your_company"
            android:label="@string/app_name"
            android:logo="@drawable/app_icon_your_company"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- configChanges, para evitar que cuando el control se desconecte, interrumpa el app -->
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.DetailsActivity" />
        <activity android:name=".activity.PlaybackVideoActivity" />
        <activity android:name=".activity.SeeAllActivity" />
        <activity android:name=".activity.BrowseErrorActivity" />
        <activity
            android:name=".fragment.PlaybackVideoFromYoutubeFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.PlaybackVideoFromYoutubeActivity"
            android:label="@string/app_name" />
        <activity android:name=".activity.PreferencesActivity" />
    </application>

</manifest>