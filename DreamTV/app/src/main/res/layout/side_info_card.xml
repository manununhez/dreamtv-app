<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:elevation="02dp">

    <ProgressBar
        android:id="@+id/pbContinueWatching"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/default_background"
        android:max="100"
        android:theme="@style/ProgressBarVideoPlayer"
        apps:progress="40" />


    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_above="@id/pbContinueWatching"
        android:layout_below="@id/tvErrorsSelected"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            apps:src="@drawable/dreamtv_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/text_background_card"
            android:orientation="vertical"
            android:padding="4dp">

            <RatingBar
                android:id="@+id/rbTask"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:max="5"
                android:numStars="5"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                apps:rating="1" />


            <TextView
                android:id="@+id/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:maxLines="5"
                android:textColor="@color/white"
                android:textSize="15sp"
                apps:text="Title" />

            <TextView
                android:id="@+id/secondary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="11sp"
                apps:text="Video Description" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvVideoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:padding="2dp"
            android:background="@color/text_background_card"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="10sp"
            apps:text="23:15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvErrorsSelected"
        style="@style/Widget.Leanback.ImageCardView.TitleStyle"
        android:layout_alignParentTop="true"
        android:background="@color/errors_found_report_background"
        android:fontFamily="@font/roboto"
        android:maxLines="2"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textAlignment="center"
        android:textSize="12sp"
        apps:text="Texto que van en la cabecera" />

</RelativeLayout>