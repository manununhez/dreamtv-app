    <style name="DefaultDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="LeanbackPreferences" parent="Theme.Leanback">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlayCustom</item>
    </style>

    <style name="PreferenceThemeOverlayCustom" parent="PreferenceThemeOverlay.v14.Leanback">
        <!-- settings title panel background color -->
        <item name="android:windowBackground">@color/default_background</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="SubtitleStyleNav">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubtitleStyleWithoutError" parent="SubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/subtitle</item>
    </style>

    <style name="SubtitleStyleWithoutErrorNav" parent="SubtitleStyleNav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/subtitle</item>
    </style>


    <style name="SubtitleStyleError" parent="SubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/subtitle_with_error</item>
    </style>

    <style name="SubtitleStyleErrorNav" parent="SubtitleStyleNav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/subtitle_with_error</item>
    </style>

    <style name="SubtitleStyleSelected" parent="SubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/stt_list_nav_selected_background</item>
    </style>

    <style name="SubtitleStyleSelectedNav" parent="SubtitleStyleNav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/stt_list_nav_selected_background</item>
    </style>


    <style name="ProgressBarVideoPlayer" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/progress_bar</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:secondaryProgressTint">@color/colorAccent</item>
        <item name="android:max">100</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/default_background</item>
        <item name="colorControlActivated">@color/ratingBarStar</item>
    </style>

</resources>
